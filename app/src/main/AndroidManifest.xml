<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.strv.transitionssample">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".TransitionsApp"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/App">
		<activity
			android:name=".ui.detail.DetailActivity"
			android:theme="@style/App.Detail" />
		<activity
			android:name=".ui.list.ListActivity"
			android:theme="@style/App.List" />
		<activity
			android:name=".ui.main.MainActivity"
			android:theme="@style/App.ActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.simple.SimpleActivity"
			android:label="@string/simple"
			android:theme="@style/App.ActionBar" />
		<activity android:name=".ui.scene.SceneActivity">
		</activity>
	</application>

</manifest>